<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tab2Activity">

    <com.liang.tabs.TabLayout
        android:id="@+id/jTabLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:tabContentStart="0dp"
        app:tabDividerColor="@color/colorAccent"
        app:tabDividerWidth="10dp"
        app:tabIconTint="@color/tab_icon_color"
        app:tabIconTintMode="multiply"
        app:tabIndicatorColor="@color/colorPrimary"
        app:tabIndicatorFullWidth="false"
        app:tabIndicatorHeight="5dp"
        app:tabIndicatorMargin="10dp"
        app:tabIndicatorWidthScale="0.8"
        app:tabInlineLabel="false"
        app:tabMode="fixed"
        app:tabRippleColor="@color/colorPrimary"
        app:tabScaleTransitionScroll="1.2"
        app:tabTextBold="true"
        app:tabTextColor="@drawable/text_color_tab"
        app:tabTextColorTransitionScroll="true"
        app:tabUnboundedRipple="false" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@id/jTabLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>